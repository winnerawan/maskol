<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailTempat.DetailWarung">


    <ImageView
        android:id="@+id/warung_img"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:contentDescription="image detail warung"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/warung_txtNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="151dp"
        android:text="Kedai ABC"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/warung_txtAlamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="206dp"
        android:text="Jl. kaki lima 12" />

    <TextView
        android:id="@+id/warung_txtTelpon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/warung_txtAlamat"
        android:layout_centerHorizontal="true"
        android:text="0354-44546" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/warung_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/warung_txtTelpon"
        android:scrollbars="vertical"
        tools:listitem="@layout/lst_item_menu_perwarung" >

    </android.support.v7.widget.RecyclerView>

    <ProgressBar
        android:id="@+id/warung_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="127dp" />
</RelativeLayout>