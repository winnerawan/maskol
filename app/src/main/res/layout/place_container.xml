<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
              android:layout_width="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:tag="layout/food_merchant_menu_image_new_0"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:id="@+id/layout_tempat_img"
        android:layout_height="156dp"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/tempat_img"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/food_img_placeholder_feed" />

        <ImageView
            android:id="@+id/img_gradient_merchant"
            android:layout_height="match_parent"
            android:layout_marginTop="90dp"
            android:layout_width="match_parent"
            android:src="@drawable/food_black_gradient" />

        <ImageView
            android:id="@+id/img_gradient_merchant_1"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            android:src="@drawable/food_black_gradient_reverse" />

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content">

            <LinearLayout
                android:id="@+id/layout_consolidated_likes"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:tag="binding_2">

                <TextView
                    android:drawablePadding="5dp"
                    android:id="@+id/text_consolidated_likes"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:shadowColor="#4d000000"
                    android:shadowDy="1"
                    android:tag="binding_3"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img_promotion_badge"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:layout_width="140dp"
                android:minHeight="18dp"
                android:scaleType="fitXY"
                android:tag="binding_4" />
        </RelativeLayout>
    </FrameLayout>

    <include
        android:id="@+id/container_merchant_info"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/place_info" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/tempat_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        tools:listitem="@layout/lst_item_menu_perwarung" >

    </android.support.v7.widget.RecyclerView>
</LinearLayout>