<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:contentPadding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/menuWarung_lst_img"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="8dp"
            android:src="@mipmap/ic_location_round"
            app:civ_border_color="#FF000000"
            app:civ_border_width="1dp"
            app:srcCompat="@mipmap/ic_launcher_foreground" />

        <TextView
            android:id="@+id/menuWarung_lst_txtNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/menuWarung_lst_img"
            android:text="Nama Menu"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="22sp" />

        <RatingBar
            android:id="@+id/menuWarung_lst_ratingBar"
            style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:isIndicator="true"
            android:rating="0" />

        <TextView
            android:id="@+id/menuWarung_lst_txtKet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/menuWarung_lst_txtNama"
            android:layout_below="@+id/menuWarung_lst_txtNama"
            android:text="Jl. Gotong royong 115 Babat Lamongan Mojokerto"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/menuWarung_lst_txtHarga"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/menuWarung_lst_img"
            android:text="0.25KM"
            android:textAlignment="center"
            android:textSize="10sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
