<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="8dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:contentPadding="8dp">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recom_lst_img"
            android:layout_width="match_parent"
            android:layout_height="170dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/home_item_img_desc"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/common_google_signin_btn_icon_light_normal_background" />

        <TextView
            android:id="@+id/recom_lst_txtNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/recom_lst_img"
            android:text="Nama Makanan"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/recom_lst_imgTempat"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/ic_location_round"
            app:civ_border_color="#FF000000"
            app:civ_border_width="1dp"
            app:srcCompat="@mipmap/ic_launcher_foreground" />

        <TextView
            android:id="@+id/recom_lst_txtTempat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="52dp"
            android:layout_marginTop="11dp"
            android:background="@color/common_google_signin_btn_text_light_default"
            android:text="Nama Tempat"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recom_lst_txtHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/recom_lst_txtNama"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="14dp"
            android:text="IDR 12K" />

        <RatingBar
            android:id="@+id/recom_ratingBar"
            style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:isIndicator="true"
            android:rating="2" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
