<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item_restaurant_recommended"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/padding_15dp"
    android:tag="layout/food_item_restaurant_recommended_0"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_img_merchant"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <ImageView
                android:id="@+id/place_lst_imgTempat"
                android:layout_height="220dp"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/food_img_placeholder_feed"/>

            <ImageView
                android:id="@+id/img_gradient_merchant"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_width="wrap_content"
                android:src="@drawable/food_black_gradient" />

            <ImageView
                android:id="@+id/img_gradient_merchant_1"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:layout_width="wrap_content"
                android:src="@drawable/food_black_gradient_reverse" />

            <ImageView
                android:id="@+id/img_promotion_badge"
                android:layout_alignBottom="@id/place_lst_imgTempat"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="20dp"
                android:layout_width="140dp"
                android:minHeight="18dp"
                android:scaleType="fitXY"/>
        </RelativeLayout>

        <LinearLayout
            android:background="@drawable/food_recomendation_shadow"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp">

            <TextView
                fontPath="font/neosanspro_medium.ttf"
                android:ellipsize="end"
                android:id="@+id/place_lst_txtNama"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:paddingTop="1dp"
                android:textStyle="bold"
                android:tag="binding_3"
                android:textColor="#212121"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/go"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:ellipsize="end"
                    android:id="@+id/text_merchant_address"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_width="wrap_content"
                    android:maxLines="2"
                    android:paddingTop="1dp"
                    android:tag="binding_3"
                    android:textColor="#212121"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>